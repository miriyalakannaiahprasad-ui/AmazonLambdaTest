package tests;

import base.BaseTest;
import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.testng.annotations.Test;

public class AmazonIphoneTest extends BaseTest {

    @Test
    public void addIphoneToCart() {

        // Search for iPhone
        driver.findElement(By.id("search")).sendKeys("iPhone");
        driver.findElement(By.cssSelector("button[type='submit']")).click();

        // Click first product
        driver.findElement(By.cssSelector(".product-title a")).click();

        // Get price
        WebElement price = driver.findElement(By.cssSelector(".product-price .price"));
        System.out.println("iPhone Price: " + price.getText());

        // Add to cart
        driver.findElement(By.cssSelector(".btn-cart")).click();
    }
}
